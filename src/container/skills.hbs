{{!-- 
Це код container файлу для skills сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/skills"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="All skills" big=true}}
                <ul>
                    {{#each skills}}
                        <li>
                            {{name}}

                            {{#if point includeZero=true}} ({{point}}) {{/if}}
                            {{#if isTop}} (TOP) {{/if}}

                            {{#unless point includeZero=true}} (do not learning...) {{/unless}}

                            {{#unless point}}
                                {{#if point includeZero=true}}
                                    (now is learning...)
                                {{/if}}
                            {{/unless}}
                        </li>
                    {{/each}}
                </ul>
            </section>

            <section>
                {{> title data="My hobbies" big=false}}
                <ol>
                    {{#each hobbies}}
                        <li>
                            {{name}}

                            {{#if isMain}} (favorite) {{/if}}
                        </li>
                    {{/each}}
                </ol>
            </section>
        </main>
    {{/with}}
</div>

